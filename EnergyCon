-- Config Area -- 
-- Monitors --
local Monitors = {
	Mon_Main = "monitor_6",   -- The Name of the Main monitor
	Mon_Cell_1 = "monitor_7", -- The Name of the Monitor between the first and the second cell
	Mon_Cell_2 = "monitor_8", -- The Name of the Monitor between the second and the third cell
	Mon_Cell_3 = "monitor_9", -- The Name of the Monitor between the third and the forth cell
	Mon_Side_1 = "monitor_5", -- The Name of the first Monitor on the side
	Mon_Side_2 = "monitor_4"  -- The Name of the second Monitor on the side
}
-- Magmatic Dynamos--
local Dynamos = {
	TE_Dyn_Mag_1 = {name = "tile_thermalexpansion_dynamo_magmatic_name_0",posx = 0, posy = 0, state = false,mon = MonMain}, -- The first Magmatic Dynamo
	TE_Dyn_Mag_2 = {name = "tile_thermalexpansion_dynamo_magmatic_name_1",posx = 0, posy = 0, state = false,mon = MonMain}, -- The second Magmatic Dynamo
	TE_Dyn_Mag_3 = {name = "tile_thermalexpansion_dynamo_magmatic_name_2",posx = 0, posy = 0, state = false,mon = MonMain}, -- The third Magmatic Dynamo
	TE_Dyn_Mag_4 = {name = "tile_thermalexpansion_dynamo_magmatic_name_3",posx = 0, posy = 0, state = false,mon = MonMain}, -- The forth Magmatic Dynamo
	TE_Dyn_Mag_5 = {name = "tile_thermalexpansion_dynamo_magmatic_name_4",posx = 0, posy = 0, state = false,mon = MonMain}, -- The fifth Magmatic Dynamo
	TE_Dyn_Mag_6 = {name = "tile_thermalexpansion_dynamo_magmatic_name_5",posx = 0, posy = 0, state = false,mon = MonMain}, -- The sixth Magmatic Dynamo
	TE_Dyn_Mag_7 = {name = "tile_thermalexpansion_dynamo_magmatic_name_6",posx = 0, posy = 0, state = false,mon = MonMain}  -- The seventh Magmatic Dynamo
}
-- Energy Cells --
local ECells = {
	TE_Cell_1 = {name = "cofh_thermalexpansion_energycell_2",mon_top = nil,mon_bot = Mon_Cell_1},        -- The first Energy Cell
	TE_Cell_2 = {name = "cofh_thermalexpansion_energycell_3",mon_top = Mon_Cell_1,mon_bot = Mon_Cell_2}, -- The second Energy Cell
	TE_Cell_3 = {name = "cofh_thermalexpansion_energycell_4",mon_top = Mon_Cell_2,mon_bot = Mon_Cell_3}, -- The third Energy Cell
	TE_Cell_4 = {name = "cofh_thermalexpansion_energycell_5",mon_top = Mon_Cell_3,mon_bot = nil}         -- The forth Energy Cell
}

-- Functions --

local start = function()
	for i,v in pairs(ECells) do
		v["wrap"] = peripheral.wrap(v.name)
		for k,x in pairs(v) do print(tostring(k).." : "..tostring(x)) end
	end
	for i,v in pairs(Dynamos) do
		v["wrap"] = peripheral.wrap(v.name)
		for k,x in pairs(v) do print(tostring(k).." : "..tostring(x)) end
	end
	for i,v in pairs(Monitors) do
		v = peripheral.wrap(tostring(v))
	end
end